<h2>Productos</h2>

    {{#each products.payload}}
   <div class="product">
    <h3>{{title}}</h3>
    <p>Precio: ${{price}}</p>
    <p>Descripción: {{description}}</p>
    <p>Código: {{code}}</p>
    <p>Estado: {{#if status}}Disponible{{else}}No disponible{{/if}}</p>
    <p>Stock: {{stock}}</p>
    <p>Categoría: {{category}}</p>
    <button class="add-to-cart" data-product-id="{{_id}}">Agregar al carrito</button>
</div>
    {{/each}}
    {{#if products.hasPrevPage}}
  <a href="{{products.prevLink}}" class="btn btn-primary">Página Anterior</a>
{{/if}}
{{#if products.hasNextPage}}
  <a href="{{products.nextLink}}" class="btn btn-primary">Página Siguiente</a>
{{/if}}